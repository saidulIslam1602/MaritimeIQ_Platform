{
  // Logging configuration for MaritimeIQ Platform
  // Debug level for MaritimeIQ.Platform enables detailed operation tracking
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "MaritimeIQ.Platform": "Debug"
    }
  },
  "AllowedHosts": "*",
  
  // Azure Application Insights for telemetry and monitoring
  // Provides application performance monitoring and diagnostics
  "ApplicationInsights": {
    "ConnectionString": "InstrumentationKey=#{APPINSIGHTS_INSTRUMENTATIONKEY}#"
  },

  // Azure Service Bus configuration for message queuing and communication
  // Handles asynchronous processing of maritime operations data
  "ServiceBus": {
    "ConnectionString": "#{SERVICEBUS_CONNECTION_STRING}#",
    "Namespace": "maritime-platform-servicebus",
    // Queue definitions for different types of maritime data processing
    "Queues": {
      "VesselData": "vessel-data-queue",           // Real-time vessel telemetry and position data
      "RouteUpdates": "route-updates-queue",       // Route changes and schedule updates
      "SafetyAlerts": "safety-alerts-queue",       // Critical safety notifications and alerts
      "MaintenanceRequests": "maintenance-requests-queue", // Vessel maintenance scheduling
      "PassengerNotifications": "passenger-notifications-queue", // Passenger communication
      "EnvironmentalData": "environmental-data-queue" // Environmental monitoring and compliance
    },
    "MaxConcurrentCalls": 10,        // Maximum concurrent message processing
    "MaxAutoRenewDuration": "00:05:00" // Message lock renewal duration
  },

  // Azure Event Hubs for high-throughput real-time data streaming
  // Processes millions of maritime data points per day
  "EventHub": {
    "ConnectionString": "#{EVENTHUB_CONNECTION_STRING}#", 
    "Namespace": "maritime-platform-events",
    // Event Hub definitions for different data streams
    "EventHubs": {
      "VesselTelemetry": "vessel-telemetry",        // GPS, speed, heading, engine data
      "AISData": "ais-data-stream",                // Automatic Identification System data
      "EnvironmentalSensors": "environmental-sensors" // CO2, NOx, SOx, battery levels
    },
    "ConsumerGroup": "$Default",     // Consumer group for data processing
    "PartitionCount": 4,             // Number of partitions for parallel processing
    "RetentionDays": 7               // Data retention period for analytics
  },

  // Azure Key Vault for secure secret management
  // Stores all sensitive configuration data and API keys
  "KeyVault": {
    "VaultUri": "https://maritime-platform-kv.vault.azure.net/",
    "ClientId": "#{KEYVAULT_CLIENT_ID}#",
    "ClientSecret": "#{KEYVAULT_CLIENT_SECRET}#",
    "TenantId": "#{AZURE_TENANT_ID}#",
    "UseManagedIdentity": true,  // Use managed identity for production security
    // Secret names for different service connections
    "SecretNames": {
      "DatabaseConnection": "maritime-database-connection",
      "ServiceBusConnection": "maritime-servicebus-connection",
      "EventHubConnection": "maritime-eventhub-connection",
      "IoTHubConnection": "maritime-iothub-connection",
      "CognitiveServicesKey": "maritime-cognitive-key",
      "PowerBIClientSecret": "maritime-powerbi-secret"
    }
  },

  "IoTHub": {
    "ConnectionString": "#{IOTHUB_CONNECTION_STRING}#",
    "HubName": "maritime-platform-iothub",
    "ConsumerGroup": "$Default",
    "DeviceConnections": {
      "NordicAurora": "nordic-aurora-device",
      "NordicSpirit": "nordic-spirit-device", 
      "ArcticExplorer": "arctic-explorer-device",
      "CoastalVoyager": "coastal-voyager-device"
    },
    "TelemetryInterval": "00:00:30",
    "MaxMessageSize": 262144,
    "RetentionDays": 7
  },

  "CognitiveServices": {
    "TextAnalyticsEndpoint": "https://maritime-textanalytics.cognitiveservices.azure.com/",
    "TextAnalyticsKey": "#{COGNITIVE_TEXTANALYTICS_KEY}#",
    "VisionEndpoint": "https://maritime-vision.cognitiveservices.azure.com/",
    "VisionKey": "#{COGNITIVE_VISION_KEY}#",
    "TranslatorKey": "#{COGNITIVE_TRANSLATOR_KEY}#",
    "TranslatorEndpoint": "https://api.cognitive.microsofttranslator.com/",
    "TranslatorRegion": "westeurope",
    "SpeechServiceKey": "#{COGNITIVE_SPEECH_KEY}#",
    "SpeechServiceRegion": "westeurope"
  },

  "PowerBI": {
    "ClientId": "#{POWERBI_CLIENT_ID}#",
    "ClientSecret": "#{POWERBI_CLIENT_SECRET}#",
    "TenantId": "#{AZURE_TENANT_ID}#",
    "WorkspaceId": "#{POWERBI_WORKSPACE_ID}#",
    "Username": "#{POWERBI_USERNAME}#",
    "Password": "#{POWERBI_PASSWORD}#",
    "AuthorityUrl": "https://login.microsoftonline.com/common/",
    "ResourceUrl": "https://analysis.windows.net/powerbi/api",
    "ApiUrl": "https://api.powerbi.com/v1.0/myorg/"
  },

  "StreamAnalytics": {
    "JobName": "maritime-platform-analytics",
    "ResourceGroup": "maritime-platform-rg",
    "InputStreams": [
      {
        "Name": "vessel-telemetry",
        "Type": "EventHub",
        "ConnectionString": "#{EVENTHUB_CONNECTION_STRING}#",
        "EventHubName": "vessel-telemetry",
        "Format": "JSON"
      },
      {
        "Name": "ais-data",
        "Type": "EventHub", 
        "ConnectionString": "#{EVENTHUB_CONNECTION_STRING}#",
        "EventHubName": "ais-data-stream",
        "Format": "JSON"
      }
    ],
    "OutputStreams": [
      {
        "Name": "processed-data",
        "Type": "PowerBI",
        "Dataset": "MaritimeAnalytics",
        "Table": "ProcessedTelemetry"
      },
      {
        "Name": "alerts",
        "Type": "ServiceBus",
        "Queue": "safety-alerts-queue"
      }
    ]
  },

  "Database": {
    "ConnectionString": "#{DATABASE_CONNECTION_STRING}#",
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": false,
    "MaxRetryCount": 3
  },

  "Azure": {
    "SubscriptionId": "#{AZURE_SUBSCRIPTION_ID}#",
    "ResourceGroup": "maritime-platform-rg",
    "Location": "West Europe",
    "Tags": {
      "Environment": "Production",
      "Project": "MaritimeIQ-Platform",
      "Owner": "maritime-support@company.com",
      "CostCenter": "IT-Operations"
    }
  },

  "Monitoring": {
    "HealthChecks": {
      "Enabled": true,
      "Endpoints": {
        "ServiceBus": "/health/servicebus",
        "EventHub": "/health/eventhub", 
        "IoTHub": "/health/iothub",
        "Database": "/health/database",
        "CognitiveServices": "/health/cognitive"
      }
    },
    "Metrics": {
      "Enabled": true,
      "Interval": "00:01:00",
      "CustomCounters": [
        "vessel_position_updates",
        "safety_alerts_generated",
        "passenger_notifications_sent",
        "maintenance_requests_processed"
      ]
    }
  },

  "Security": {
    "Authentication": {
      "Authority": "https://login.microsoftonline.com/#{AZURE_TENANT_ID}#",
      "ClientId": "#{APP_CLIENT_ID}#",
      "ValidateIssuer": true,
      "ValidateAudience": true
    },
    "Authorization": {
      "Roles": {
        "FleetManager": "fleet-managers",
        "Captain": "vessel-captains",
        "SafetyOfficer": "safety-officers",
        "EnvironmentalOfficer": "environmental-officers",
        "PassengerService": "passenger-services"
      }
    }
  },

  "Integration": {
    "ExternalAPIs": {
      "WeatherService": {
        "BaseUrl": "https://api.met.no/weatherapi/",
        "ApiKey": "#{WEATHER_API_KEY}#",
        "Timeout": "00:00:30"
      },
      "AISService": {
        "BaseUrl": "https://www.marinetraffic.com/api/",
        "ApiKey": "#{AIS_API_KEY}#",
        "Timeout": "00:00:45"
      },
      "PortAuthorities": {
        "BaseUrl": "https://api.havneportalen.no/",
        "ApiKey": "#{PORT_API_KEY}#",
        "Timeout": "00:01:00"
      }
    }
  },

  // Fleet configuration for MaritimeIQ Platform vessels
  // Defines the complete fleet composition and operational routes
  "FleetConfiguration": {
    // Vessel definitions with technical specifications and operational data
    "Vessels": [
      {
        "Id": "HC001",                    // Unique vessel identifier
        "Name": "MS Arctic Explorer",     // Official vessel name
        "IMO": "9876543",                // International Maritime Organization number
        "CallSign": "LAJX",              // Radio call sign
        "MaxPassengers": 640,            // Maximum passenger capacity
        "MaxCrew": 55,                   // Maximum crew capacity
        "ServiceRoute": "Bergen-Kirkenes" // Primary service route
      },
      {
        "Id": "HC002", 
        "Name": "MS Nordic Spirit",
        "IMO": "9876544",
        "CallSign": "LAJY", 
        "MaxPassengers": 640,
        "MaxCrew": 55,
        "ServiceRoute": "Bergen-Kirkenes"
      },
      {
        "Id": "HC003",
        "Name": "MS Nordic Aurora", 
        "IMO": "9876545",
        "CallSign": "LAJZ",
        "MaxPassengers": 640,
        "MaxCrew": 55,
        "ServiceRoute": "Bergen-Kirkenes"
      },
      {
        "Id": "HC004",
        "Name": "MS Coastal Voyager",
        "IMO": "9876546", 
        "CallSign": "LAJW",
        "MaxPassengers": 640,
        "MaxCrew": 55,
        "ServiceRoute": "Bergen-Kirkenes"
      }
    ],
    // Route definitions for coastal service operations
    "Routes": {
      "BergenKirkenes": {
        "RouteId": "BK001",              // Unique route identifier
        "Name": "Bergen - Kirkenes",     // Route name
        "Distance": 1485,                // Total distance in nautical miles
        "Duration": "6.5 days",          // Typical voyage duration
        "Ports": [                       // Ports of call along the route
          "Bergen", "Ålesund", "Trondheim", "Bodø", 
          "Tromsø", "Honningsvåg", "Kirkenes"
        ]
      }
    }
  },

  "EnvironmentalCompliance": {
    "EmissionLimits": {
      "CO2": 1000.0,
      "NOx": 15.0,
      "SOx": 0.5
    },
    "WasteManagement": {
      "RecyclingTarget": 75.0,
      "ReportingInterval": "Daily"
    },
    "FuelEfficiency": {
      "TargetConsumption": 180.0,
      "Unit": "tons/day"
    }
  }
}
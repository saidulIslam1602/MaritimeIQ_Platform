# Maritime Platform - Research Environment Configuration
# Copy this file to .env and customize for your research group

# ==============================================
# RESEARCH GROUP CONFIGURATION
# ==============================================
RESEARCH_GROUP_NAME=Your_Research_Group
INSTITUTION_NAME=Your_University
RESEARCH_PROJECT=Maritime_Analytics_Project
ENVIRONMENT=research

# ==============================================
# APPLICATION SETTINGS
# ==============================================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080
RESEARCH_MODE=true
DATA_RETENTION_DAYS=365
MAX_USERS=50

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_SERVER=db
DB_NAME=MaritimeResearch
DB_USER=sa
DB_PASSWORD=ResearchPass123!
CONNECTION_STRING=Server=db;Database=MaritimeResearch;User=sa;Password=ResearchPass123!;TrustServerCertificate=true

# ==============================================
# AZURE SERVICES (Optional - for cloud features)
# ==============================================
# Leave empty for local-only deployment
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=

# Storage
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=research-data

# IoT Hub (for real maritime data)
IOT_HUB_CONNECTION_STRING=
IOT_HUB_NAME=

# Event Hub (for data streaming)
EVENT_HUB_CONNECTION_STRING=
EVENT_HUB_NAME=

# Service Bus (for messaging)
SERVICE_BUS_CONNECTION_STRING=
SERVICE_BUS_QUEUE_NAME=

# Cognitive Services (for AI features)
COGNITIVE_SERVICES_ENDPOINT=
COGNITIVE_SERVICES_KEY=

# Key Vault (for secrets management)
KEY_VAULT_URL=

# Power BI (for advanced analytics)
POWERBI_CLIENT_ID=
POWERBI_CLIENT_SECRET=
POWERBI_WORKSPACE_ID=

# ==============================================
# AUTHENTICATION SETTINGS
# ==============================================
JWT_SECRET_KEY=YourSuperSecretJWTKeyForResearchGroup2024
JWT_ISSUER=MaritimePlatform
JWT_AUDIENCE=ResearchGroup
JWT_EXPIRY_MINUTES=480

# ==============================================
# LOGGING & MONITORING
# ==============================================
LOG_LEVEL=Information
LOG_TO_FILE=true
LOG_DIRECTORY=./logs
ENABLE_TELEMETRY=true

# ==============================================
# RESEARCH-SPECIFIC SETTINGS
# ==============================================
# Data Processing
MAX_DATASET_SIZE_MB=1000
ENABLE_DATA_EXPORT=true
EXPORT_FORMATS=csv,json,excel

# Analysis Features
ENABLE_STATISTICAL_ANALYSIS=true
ENABLE_MACHINE_LEARNING=true
ENABLE_VISUALIZATION=true

# Collaboration
ENABLE_MULTI_USER=true
ENABLE_PROJECT_SHARING=true
ENABLE_DATA_VERSIONING=true

# ==============================================
# EXTERNAL INTEGRATIONS
# ==============================================
# R Integration
R_SCRIPT_PATH=/usr/bin/Rscript
ENABLE_R_INTEGRATION=false

# Python Integration
PYTHON_PATH=/usr/bin/python3
ENABLE_PYTHON_INTEGRATION=false

# Jupyter Notebooks
JUPYTER_URL=http://localhost:8888
ENABLE_JUPYTER_INTEGRATION=false

# ==============================================
# SECURITY SETTINGS
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ENABLE_HTTPS_REDIRECT=false
ENABLE_HSTS=false
API_RATE_LIMIT=1000

# ==============================================
# EMAIL NOTIFICATIONS (Optional)
# ==============================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yourresearch.edu
ENABLE_EMAIL_NOTIFICATIONS=false
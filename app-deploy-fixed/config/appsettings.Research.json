{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "Research": {
    "GroupName": "${RESEARCH_GROUP_NAME}",
    "Institution": "${INSTITUTION_NAME}",
    "ProjectName": "${RESEARCH_PROJECT}",
    "DataRetentionDays": "${DATA_RETENTION_DAYS}",
    "MaxUsers": "${MAX_USERS}",
    "EnableDataExport": true,
    "ExportFormats": ["csv", "json", "excel", "parquet"],
    "EnableStatisticalAnalysis": true,
    "EnableMachineLearning": true,
    "EnableVisualization": true
  },

  "ConnectionStrings": {
    "DefaultConnection": "${CONNECTION_STRING}",
    "Redis": "localhost:6379",
    "FileStorage": "localhost:9000"
  },

  "Authentication": {
    "JwtSettings": {
      "SecretKey": "${JWT_SECRET_KEY}",
      "Issuer": "${JWT_ISSUER}",
      "Audience": "${JWT_AUDIENCE}",
      "ExpiryMinutes": "${JWT_EXPIRY_MINUTES}"
    }
  },

  "Azure": {
    "TenantId": "${AZURE_TENANT_ID}",
    "ClientId": "${AZURE_CLIENT_ID}",
    "ClientSecret": "${AZURE_CLIENT_SECRET}",
    "SubscriptionId": "${AZURE_SUBSCRIPTION_ID}",
    "ResourceGroup": "${AZURE_RESOURCE_GROUP}",
    
    "Storage": {
      "ConnectionString": "${AZURE_STORAGE_CONNECTION_STRING}",
      "ContainerName": "${AZURE_STORAGE_CONTAINER}"
    },
    
    "IoTHub": {
      "ConnectionString": "${IOT_HUB_CONNECTION_STRING}",
      "HubName": "${IOT_HUB_NAME}"
    },
    
    "EventHub": {
      "ConnectionString": "${EVENT_HUB_CONNECTION_STRING}",
      "HubName": "${EVENT_HUB_NAME}"
    },
    
    "ServiceBus": {
      "ConnectionString": "${SERVICE_BUS_CONNECTION_STRING}",
      "QueueName": "${SERVICE_BUS_QUEUE_NAME}"
    },
    
    "CognitiveServices": {
      "Endpoint": "${COGNITIVE_SERVICES_ENDPOINT}",
      "Key": "${COGNITIVE_SERVICES_KEY}"
    },
    
    "KeyVault": {
      "VaultUrl": "${KEY_VAULT_URL}"
    },
    
    "PowerBI": {
      "ClientId": "${POWERBI_CLIENT_ID}",
      "ClientSecret": "${POWERBI_CLIENT_SECRET}",
      "WorkspaceId": "${POWERBI_WORKSPACE_ID}"
    }
  },

  "Features": {
    "EnableAzureServices": false,
    "EnableRealTimeData": true,
    "EnableDataProcessing": true,
    "EnableAnalytics": true,
    "EnableExports": true,
    "EnableCollaboration": true,
    "EnableVersioning": true
  },

  "DataProcessing": {
    "MaxDatasetSizeMB": "${MAX_DATASET_SIZE_MB}",
    "BatchProcessingEnabled": true,
    "RealTimeProcessingEnabled": true,
    "SupportedFormats": ["csv", "json", "xml", "parquet", "xlsx"]
  },

  "Integrations": {
    "R": {
      "Enabled": "${ENABLE_R_INTEGRATION}",
      "ScriptPath": "${R_SCRIPT_PATH}"
    },
    "Python": {
      "Enabled": "${ENABLE_PYTHON_INTEGRATION}",
      "PythonPath": "${PYTHON_PATH}"
    },
    "Jupyter": {
      "Enabled": "${ENABLE_JUPYTER_INTEGRATION}",
      "BaseUrl": "${JUPYTER_URL}"
    }
  },

  "Security": {
    "Cors": {
      "AllowedOrigins": ["http://localhost:3000", "http://localhost:8080", "http://localhost:8081"],
      "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "AllowedHeaders": ["*"],
      "AllowCredentials": true
    },
    "RateLimit": {
      "RequestsPerMinute": "${API_RATE_LIMIT}",
      "Enabled": true
    }
  },

  "Monitoring": {
    "HealthChecks": {
      "Enabled": true,
      "DetailedErrors": true
    },
    "Metrics": {
      "Enabled": true,
      "CollectSystemMetrics": true,
      "CollectApplicationMetrics": true
    }
  },

  "Email": {
    "Enabled": "${ENABLE_EMAIL_NOTIFICATIONS}",
    "SmtpHost": "${SMTP_HOST}",
    "SmtpPort": "${SMTP_PORT}",
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}",
    "FromEmail": "${SMTP_FROM_EMAIL}",
    "EnableSsl": true
  }
}